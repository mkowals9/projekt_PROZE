<GridPane id="gameScreenAnchorPane" prefHeight="600.0" prefWidth="800.0" stylesheets="@../../resources/cssfiles/gameScreen.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="screens.GameScreenController">

